<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_0"
    android:layout_marginLeft="@dimen/margin_0"
    android:layout_marginRight="@dimen/margin_0"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp">


<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content">

  <com.android.volley.toolbox.NetworkImageView
      android:layout_width="@dimen/image_size_0"
      android:layout_height="@dimen/image_size_0"
      android:id="@+id/image"
      android:layout_margin="@dimen/margin_0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_toRightOf="@id/image"
        android:layout_marginTop="@dimen/margin_0"
        android:layout_marginLeft="@dimen/margin_1"
        android:textStyle="bold"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artist_name-collection_name"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"/>


</RelativeLayout>
</android.support.v7.widget.CardView>